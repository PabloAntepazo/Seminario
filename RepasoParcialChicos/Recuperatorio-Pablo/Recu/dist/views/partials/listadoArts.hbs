{{#if Articulo_Eliminado}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{Articulo_Eliminado}}
                <button type="button" class="close" data-dismiss='alert' aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if Articulo_Modificado}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{Articulo_Modificado}}
                <button type="button" class="close" data-dismiss='alert' aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if Articulo_Agregado}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{Articulo_Agregado}}
                <button type="button" class="close" data-dismiss='alert' aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>
{{/if}}


<table border="1">
    <theader>
        <th>Articulo</th>
        <th>Descripcion</th>
        <th>Precio</th>
        <th>Modificar</th>
        <th>Eliminar</th>
    </theader>
    {{#each articulos}}
    <form action="./modificar/{{id}}" method="post">
        <tr>
            <td>{{id}}</td>
            <td><input type="text" name="descripcion" value={{descripcion}}></td>
            <td><input type="number" name="precio" value={{precio}}></td>
            <td><button>Modificar</button></td>
            <td><a class="btn btn-danger" href="/admin/delete/{{id}}">Eliminar</a></td>
            <td><input type="hidden" name="id" value={{id}}></td>
        </tr>
    </form>
    {{/each}}
</table>
<BR>
<form action="./agregar/{{id}}" method="post">
    <div>
        <p>Descripcion:</p>
        <input type="text" name="descripcion" placeholder="Ingrese una descripcion" required>
    </div>
    <div>
        <p>Precio:</p>
        <input type="number" name="precio" placeholder="Ingrese un precio" required>
    </div>
    <br>
    <div><button class="btn btn-success">Agregar</button></div>
</form>
<br>
<a class="btn btn-danger" href="/admin/home">Volver</a>
<BR>

