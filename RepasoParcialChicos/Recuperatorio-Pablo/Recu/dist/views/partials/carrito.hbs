<div class="d-flex flex-row bd-highlight mb-3">
    <div class="font-weight-light" style="width: 8rem;"></div>
    <div class="row my-4 d-flex justify-content-start">
        <div class="col-md-3.2 mx-auto">
            <div class="card text-center">
                <div class="card-header"> </div>
                <div class="card-body">
                    <table border="1">
                        <theader>
                            <th>Articulo</th>
                            <th>Descripcion</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                        </theader>
                        {{#each cart}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{descripcion}}</td>
                            <td>{{precio}}</td>
                            <td>{{cantidad}}</td>
                            <td>{{subtotal}}</td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="4">No hay mas filas</td>
                        </tr>
                    </table>
                    {{/each}}
                    <!--<button class="btn btn-success">Enviar</button>-->
                </div>
            </div>
        </div>
    </div>
</div>

<br>
